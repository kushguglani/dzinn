<!DOCTYPE html>
<html ng-app="app" ng-click="hideStuff($event)">
  <head>
    <title>Admin Portal</title>
    <% include ../partials/include %>
    <link rel="stylesheet" href="css/admin.css"/>
        <style>
            .log-in-box
            {
                position: relative;
                top:15%;
                margin: auto;
                width:300px;
            }
        </style>
    </head>
  <body>
      <div class="log-in-box background-color-white padding-20">
            <h4 class="text-center font-bold color-blue">Admin Log In</h4>
            <form method="post" action='/admin'>
            <br/>
            <%
                if(invalid)
                {
                    %>
                    <p class="red-color-text text-center font-bold">Invalid Credentials</p>
                    <br/>
                    <%
                }
            %>
            <input type="text" name="name" placeholder="Username" class="form-control" required/>
            <br/>
            <input type="password" name="password" class="form-control" placeholder="Password" required/>
            <br/>
            <button type="submit" style="margin:auto;" class="btn-design padding-10 color-blue-bg text-color-white">Log In</button>
            </form>
        </div>
  </body>
</html>
